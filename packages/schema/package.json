{
  "name": "@hdml/schema",
  "version": "0.0.0-alpha.1",
  "license": "Apache-2.0",
  "publishConfig": {
    "registry": "https://registry.npmjs.org/",
    "access": "public"
  },
  "dependencies": {
    "flatbuffers": "^23.1.21"
  },
  "scripts": {
    "dev": "../../node_modules/.bin/web-dev-server --config ../../.web-dev.config.js --open index.html",
    "lint": "node ../../node_modules/.bin/eslint -c ../../.eslintrc.js --fix --parser-options=tsconfigRootDir:'./tsconfig' 'src/**/*.ts'",
    "docs": "../../node_modules/.bin/typedoc ./src/index.ts --tsconfig ./tsconfig/cjs.json --out ./docs --includes ./",
    "compile_fbs": "flatc --ts --ts-flat-files -o ./src/.fbs -I ./src/schema/fbs ./src/schema/fbs/*.fbs",
    "compile_asc": "asc \"./src/assembly.as\" --exportRuntime --extension as --target release",
    "compile_cjs": "tsc -b ./tsconfig/cjs.json",
    "compile_esm": "tsc -b ./tsconfig/esm.json",
    "compile_dts": "tsc -b ./tsconfig/dts.json",
    "compile_tst": "tsc -b ./tsconfig/tst.json",
    "compile_bin": "../../node_modules/.bin/rollup --config ../../.rollup.config.js",
    "compile_dev": "npm run compile_fbs && npm run compile_esm && npm run compile_bin",
    "compile_all": "npm run compile_fbs && npm run compile_cjs && npm run compile_esm && npm run compile_bin && npm run compile_dts",
    "test_node": "../../node_modules/.bin/jest --config ../../.jestrc.js --roots ./packages/schema/tst --coverageDirectory ./packages/schema/coverage",
    "test_web": "../../node_modules/.bin/wtr --config ../../.web-test.config.js \"src/**/*.test.html\"",
    "tst": "clear && npm run compile_tst && npm run test_node",
    "test": "",
    "clear": "rm -rf bin && rm -rf cjs && rm -rf coverage && rm -rf docs && rm -rf dts && rm -rf esm && rm -rf tsconfig/*.tsbuildinfo && rm -rf tst",
    "build": "npm run clear && npm run lint && npm run compile_all && npm run test -- --coverage && npm run docs"
  },
  "types": "dts/index.d.ts",
  "module": "esm/index.js",
  "main": "cjs/index.js"
}
